<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="OrangeHRMSuite" parallel="tests" thread-count="6">
	<listeners>
		<listener class-name="com.orangehrm.listeners.TestListener"></listener>
	</listeners>
	<test name="OrangeHRMTest_chrome">
	<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.orangehrm.test.HomePageTest"></class>
			<class name="com.orangehrm.test.ApiTest"></class>
		</classes>
	</test>
	<test name="OrangeHRMTest_firefox">
	<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.orangehrm.test.HomePageTest"></class>
			<class name="com.orangehrm.test.ApiTest"></class>
		</classes>
	</test>
		<test name="OrangeHRMTest_edge">
	<parameter name="browser" value="edge" />
		<classes>
			<class name="com.orangehrm.test.HomePageTest"></class>
			<class name="com.orangehrm.test.ApiTest"></class>
		</classes>
	</test>
</suite>